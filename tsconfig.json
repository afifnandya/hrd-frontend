{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    ]
}
